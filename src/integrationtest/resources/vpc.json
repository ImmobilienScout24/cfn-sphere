{
        "AWSTemplateFormatVersion":"2010-09-09",
        "Description":"AWS CloudFormation Template for a VPC in eu-west-1 with one subnet",
        "Mappings":{
                "SubnetConfig":{
                        "VPC-Values":{
                                "CIDR":"10.55.0.0/16"
                        },
                        "Subnet-Values":{
                                "CIDR":"10.55.0.0/18",
                                "AZ":"eu-west-1a"
                        }
                }
        },
        "Resources":{
                "VPC":{
                        "Type":"AWS::EC2::VPC",
                        "Properties":{
                                "EnableDnsSupport":"true",
                                "EnableDnsHostnames":"true",
                                "CidrBlock":{
                                        "Fn::FindInMap":[
                                                "SubnetConfig",
                                                "VPC-Values",
                                                "CIDR"
                                        ]
                                }
                        }
                },
                "Subnet":{
                        "Type":"AWS::EC2::Subnet",
                        "Properties":{
                                "AvailabilityZone":{
                                        "Fn::FindInMap":[
                                                "SubnetConfig",
                                                "Subnet-Values",
                                                "AZ"
                                        ]
                                },
                                "VpcId":{
                                        "Ref":"VPC"
                                },
                                "CidrBlock":{
                                        "Fn::FindInMap":[
                                                "SubnetConfig",
                                                "Subnet-Values",
                                                "CIDR"
                                        ]
                                }
                        }
                }
        },
        "Outputs":{
                "id":{
                        "Description":"ID of the newly created VPC",
                        "Value":{
                                "Ref":"VPC"
                        }
                },
                "subnet":{
                        "Description":"SubnetId of the subnet",
                        "Value":{
                                "Ref":"Subnet"
                        }
                }
        }
}